<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/left_top"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

    <com.speedata.zhongqi.view.CustomTitlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/titlebar"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:divider="@color/commom_item_line_color"
            android:background="@color/theme_color"
            android:showDividers="middle"
            android:layout_height="match_parent">

            <TableRow
                android:divider="@color/commom_item_line_color"
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/num1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/main_spcx"
                    android:gravity="center"
                    android:text="商品查询"
                    android:textColor="@color/white"
                    />
                <View
                    android:layout_height="match_parent"
                    android:layout_width="1px"
                    android:background="@color/commom_item_line_color" />
                <TextView
                    android:id="@+id/num2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/main_rcpd"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="日常盘点"/>
            </TableRow>
            <View
                android:layout_height="1px"
                android:background="@color/commom_item_line_color" />
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/num3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/main_spcj"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="商品采集" />
                <View
                    android:layout_height="match_parent"
                    android:layout_width="1px"
                    android:background="@color/commom_item_line_color" />
                <TextView
                    android:id="@+id/num4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/main_khcj"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="客户采集"/>
            </TableRow>
            <View
                android:layout_height="1px"
                android:background="@color/commom_item_line_color" />
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/num5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/main_hwtz"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="货位调整" />
                <View
                    android:layout_height="match_parent"
                    android:layout_width="1px"
                    android:background="@color/commom_item_line_color" />
                <TextView
                    android:id="@+id/num6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/main_xsph"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="销售排行" />
            </TableRow>
            <View
                android:layout_height="1px"
                android:background="@color/commom_item_line_color" />



        </TableLayout>


    </ScrollView>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_color"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_item_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/main_home" />

                <TextView
                    android:textSize="20sp"
                    android:gravity="center"
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="退出登录"
                    android:textColor="@color/text_white" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_item_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imageView3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:textSize="20sp"
                    android:gravity="center"
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="设置"
                    android:textColor="@color/text_white" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>