<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:background="#66CDAA"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#000000"
            android:id="@+id/adaptercollect_TXM_tv"
            android:text="9787654321"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:id="@+id/adaptercollect_PM_tv"
            android:text="魔法书-玩具总动员"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <TextView
            android:textColor="#000000"
            android:id="@+id/adaptercollect_DJ_tv"
            android:text="199.00"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:id="@+id/adaptercollect_QMKC_tv"
            android:text="20"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/adaptercollect_CJSL_tv"
            android:text="20"
            android:gravity="center"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />



    </LinearLayout>


</LinearLayout>