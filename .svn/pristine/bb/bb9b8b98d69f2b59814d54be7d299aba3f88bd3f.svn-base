<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="30dp"
    android:orientation="horizontal">

    <com.speedata.zhongqi.view.MarqueeTextView
        android:id="@+id/number_tx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:text="运单号"
        android:textSize="@dimen/commom_mini_textsize" />

    <TextView
        android:id="@+id/store_tx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="库存数"
        android:textSize="@dimen/commom_mini_textsize" />

    <TextView
        android:id="@+id/scan_num_tx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="实扫描"
        android:textSize="@dimen/commom_mini_textsize" />

    <TextView
        android:id="@+id/weight_tx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="重量"
        android:textSize="@dimen/commom_mini_textsize" />

    <TextView
        android:id="@+id/volume_tx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="体积"
        android:textSize="@dimen/commom_mini_textsize" />

</LinearLayout>