<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4F94CD"
        android:orientation="vertical">

        <com.speedata.zhongqi.view.CustomTitlebar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="#4F94CD"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:text="请输入客户编号"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:visibility="gone" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">
                    <EditText
                        android:singleLine="true"
                        android:layout_margin="1dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:hint="请输入客户编号"
                        android:background="@drawable/shape"
                        android:id="@+id/customercollectfirst_input_et"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" >
                        <requestFocus/>
                    </EditText>
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:id="@+id/tel_et_clearbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/customercollectfirst_input_et"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/clear_button"
                        android:visibility="visible" />
                </RelativeLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button

                        android:id="@+id/customercollectfirst_sure_btn"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="0.5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_alibuybutton"
                        android:text="开始采集"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        />

                    <Button
                        android:id="@+id/customercollectfirst_exit_btn"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="0.5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape"
                        android:text="退出"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:visibility="gone"

                        />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>