<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="@color/theme_color"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/setting"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginRight="35dp"
                android:layout_marginTop="34dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_settings" />

            <ImageView
                android:src="@drawable/login_logo"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="50dp" />


            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:layout_gravity="center_vertical"
                android:background="@color/text_white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_tel" />

                <EditText
                    android:id="@+id/tel_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView7"
                    android:layout_toRightOf="@+id/imageView7"
                    android:background="@null"
                    android:hint="@string/tel_hint"
                    android:inputType="text"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="30dp"
                    android:paddingTop="8dp"
                    android:textSize="@dimen/commom_textsize" />

                <ImageView
                    android:id="@+id/tel_et_clearbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tel_et"
                    android:layout_alignRight="@+id/tel_et"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/clear_button"
                    android:visibility="visible" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/commom_item_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:background="@color/text_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_pwd" />

                <EditText
                    android:id="@+id/pwd_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView8"
                    android:layout_toRightOf="@+id/imageView8"
                    android:background="@null"
                    android:hint="@string/pwd_hint"
                    android:inputType="textPassword"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="30dp"
                    android:paddingTop="8dp"
                    android:textSize="@dimen/commom_textsize" />

                <ImageView
                    android:id="@+id/pwd_et_clearbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/pwd_et"
                    android:layout_alignRight="@+id/pwd_et"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/clear_button"
                    android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/cb_loginRem"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="自动登录"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/selector_item_blue"
                    android:text="登录"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/commom_textsize" />

                <Button
                    android:id="@+id/exit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/selector_item_blue"
                    android:text="退出"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/commom_textsize" />
                />
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/version_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="版本号:1.0"
                android:textColor="@color/text_white"
                android:textSize="@dimen/commom_min_textsize" />

            <TextView
                android:visibility="gone"
                android:id="@+id/device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="设备号:900203030WFE"
                android:textColor="@color/text_white"
                android:textSize="@dimen/commom_min_textsize" />

        </LinearLayout>


    </RelativeLayout>
</ScrollView>

